@model IEnumerable<Product>
@{
    Layout = "_Layout";
}
<div class="d-flex p-1">
     @Html.ActionLink("Все","Shop","Home",new {productCategoryId=0},new {@class=$"btn btn-primary m-1"})
     @Html.ActionLink("Велосипеды","Shop","Home",new {productCategoryId=1},new {@class="btn btn-primary m-1"})
      @Html.ActionLink("Защита","Shop","Home",new {productCategoryId=2},new {@class="btn btn-primary m-1"})
       @Html.ActionLink("Одежда","Shop","Home",new {productCategoryId=3},new {@class="btn btn-primary m-1"})
        @Html.ActionLink("Запчасти","Shop","Home",new {productCategoryId=4},new {@class="btn btn-primary m-1"})
</div>
 @if (Model.Count()==0)
    {
    <h1 class="text-center p-5">У нас нет таких товаров :(</h1>
}
else
{
   <div class="row row-cols-1 row-cols-md-3 g-4 mt-5">

        @foreach (var item in Model)
        {
            @await Html.PartialAsync("Product",item)
        }
</div> 
}
