  </div>
</nav>
<div class="container col-6 mt-4 mb-4 p-4">
      <form asp-action="Shop" asp-controller="Home" class="d-flex">
        <input name="id" class="form-control me-2" type="search" placeholder="Поиск" aria-label="Search">
        <button class="btn btn-success" type="submit">Найти</button>
      </form>
      @RenderBody()
